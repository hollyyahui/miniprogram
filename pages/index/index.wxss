/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.items {
  display: flex;
  padding: 20rpx 40rpx;
  border-bottom: 1rpx solid #eee;
  cursor: pointer;
}

.items .poster {
  width: 128rpx;
  height: 128rpx;
  margin-right: 20rpx;
}

.items .meta {
  flex: 1;
}

.items .meta .title {
  display: block;
  margin-bottom: 15rpx;
  font-size: 32rpx;
}

.items .meta .content {
  display: block;
  margin-bottom: 15rpx;
  font-size: 26rpx;
  color: #999;
}

.items .meta .time {
  font-size: 26rpx;
  color: #C0C0C0;
}
